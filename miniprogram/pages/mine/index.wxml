<!--pages/mine/index.wxml-->
<!-- Head -->
<view class="mine-head">
  <view class="mine-head-item">
    <view class="Item-left">
      <image src="{{UserInfo.avatar}}" />
      <text>{{UserInfo.nickName}}</text>
    </view>
    <view class="Item-right" data-url="perfect" bind:tap="JumpPage">
      <text>去完善信息</text>
      <van-icon name="arrow" />
    </view>
  </view>
</view>

<!-- JumpList -->
<view class="mine-bottom">
  <view class="mine-bottom-item">
    <view class="bottom-Item" bind:tap="GoPage" data-bt="MyHouse">
      <view class="Item-left">
        <image src="../../assets/house.png" />
        <text>我的房屋</text>
      </view>
      <view class="Item-right">
        <van-icon name="arrow" color="#ccc" />
      </view>
    </view>
    <view class="bottom-Item" bind:tap="GoPage" data-bt="repair">
      <view class="Item-left">
        <image src="../../assets/repair.png" />
        <text>我的报修</text>
      </view>
      <view class="Item-right">
        <van-icon name="arrow" color="#ccc" />
      </view>
    </view>
    <view class="bottom-Item">
      <view class="Item-left">
        <image src="../../assets/visitor.png" />
        <text>访客记录</text>
      </view>
      <view class="Item-right">
        <van-icon name="arrow" color="#ccc" />
      </view>
    </view>
  </view>
</view>